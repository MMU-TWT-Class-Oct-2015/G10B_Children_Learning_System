<!DOCTYPE html>
<script>
var lion = new Audio();
lion.src = "lion.mp3";

function allowDrop(ev) {
    ev.preventDefault();
}

function drag(ev) {
    ev.dataTransfer.setData("text", ev.target.id);
	}

function drop(ev) {
    ev.preventDefault();
    var data = ev.dataTransfer.getData("text");
    ev.target.appendChild(document.getElementById(data));
}

</script>
</head>

<body>
<center>
<table >
<nav>


<tr><td><a href="#" onmousedown="lion.play()"><p> Lion</p></a>

<div id="div1" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
<br>
<img src="lion.jpg" id="drag1" draggable="true" ondragstart="drag(event)" width="240" height="130">
<img src="tiger.jpg" id="drag2" draggable="true" ondragstart="drag(drop)"  width="240" height="130"><br>
<img src="rabbit.jpg" id="drag3" draggable="true" ondragstart="drag(drop)"  width="240" height="130">
<img src="elephant.jpg" id="drag4" draggable="true" ondragstart="drag(drop)"  width="240" height="130">




</td>



<td><a href="for-second-page"><img src="next.png" width="200" height="100" alt="next button"/></a></td>

</tr>




</nav>
</table>
</center>
</body>
</html>
