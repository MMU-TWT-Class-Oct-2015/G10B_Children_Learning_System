<!DOCTYPE html>
<script>
var lion = new Audio();
lion.src = "lion.mp3";

function allowDrop(ev) {
    ev.preventDefault();
}

function drag(ev) {
    ev.dataTransfer.setData("text", ev.target.id);
	}

function drop(ev) {
  ev.preventDefault();
  var data = ev.dataTransfer.getData("Text");
  ev.target.appendChild(document.getElementById(data));
  if (ev.dataTransfer.getData('Text')=='drag1')
  {alert("correct!"); }
	else
  {alert("wrong!");}
}

</script>
</head>

<body>
<center>
<table >
<nav>


<tr><td><a href="#" onmousedown="lion.play()"><p> Lion</p></a>

<div id="div1" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
<br>
<img id="drag1" src="lion.jpg"  draggable="true" ondragstart="drag(event)" width="240" height="130">
<img id="drag2" src="tiger.jpg"  draggable="true" ondragstart="drag(event)"  width="240" height="130"><br>
<img id="drag3" src="rabbit.jpg"  draggable="true" ondragstart="drag(event)"  width="240" height="130">
<img id="drag4" src="elephant.jpg"  draggable="true" ondragstart="drag(event)"  width="240" height="130">






</td>



<td><a href="for-second-page"><img src="next.png" width="200" height="100" alt="next button"/></a></td>

</tr>




</nav>
</table>
</center>
</body>
